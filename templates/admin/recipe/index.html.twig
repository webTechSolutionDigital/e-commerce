{% extends 'admin/admin.html.twig' %}

{% block title %}Hello RecipeController!
{% endblock %}

{% block body %}


	<div class="container py-3">

		<h1 class="mb-3">
			Toutes les Recettes
		</h1>

		<button class=" btn btn-info my-3">
			<a href="{{ path('admin_app_recipe_new' )}}">Nouvelle recette</a>
		</button>


		<table class="table table-striped table-hover">

			<thead>
				<tr>
					<th>Nom</th>
					<th>Cat√©gorie</th>
					<th>Images</th>
					<th style="width:200px" colspan="3">Actions</th>
				</tr>
			</thead>

			<tbody>
				{% for recipe in recipes %}

					<tr>

						<td>{{recipe.title}}</td>
						<td>{{recipe.category.name | default('')}}</td>
						<td></td>
						<td>
							<a class="btn btn-primary btn-sm" href="{{ path('app_main_show', {id : recipe.id , slug : recipe.slug } )}}">Regarder</a>
						</td>


						<td>
							<a class="btn btn-warning btn-sm" href="{{ path('admin_app_recipe_edit', {id : recipe.id } )}}">Editer</a>

						</td>


						<td>
							<form action="{{ path('admin_app_recipe_delete', {id : recipe.id } )}}" method="post">
								<input type="hidden" name="_method" value="DELETE">
								<button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
							</form>

						</td>

					</tr>

				{% endfor %}


			</tbody>

		</table>


	</div>
{% endblock %}
